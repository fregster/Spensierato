
	<xsl:template match="elementText">
		<xsl:call-template name="element_admin_header"/>
		<xsl:element name="div">
			<xsl:attribute name="id">eid_<xsl:value-of select="./@id" /></xsl:attribute>
			<xsl:attribute name="title"><xsl:value-of select="./@title" /></xsl:attribute>
			<xsl:attribute name="class"><xsl:value-of select="./@type" /></xsl:attribute>
			<xsl:value-of select="./data" />
		</xsl:element>
		<xsl:call-template name="element_admin_footer"/>
	</xsl:template>
	
	<xsl:template match="elementImage">
		<xsl:call-template name="element_admin_header"/>
		<xsl:element name="div">
			<xsl:attribute name="id">eid_<xsl:value-of select="./@id" /></xsl:attribute>
			<xsl:attribute name="title"><xsl:value-of select="./@title" /></xsl:attribute>
			<xsl:attribute name="class"><xsl:value-of select="./@type" /></xsl:attribute>
			<xsl:value-of select="./data" />
		</xsl:element>
		<xsl:call-template name="element_admin_footer"/>
	</xsl:template>
	
	<xsl:template match="elementAccount">
		<div id="account_personal_details">
			<div id="account_personal_details_title">Personal Details</div>
			<div>
				<div class="account_title">Nickname: </div>
				<div class="account_detail"><xsl:value-of select="/page/user/nickname" /></div>
			</div>
			<div>
				<div class="account_title">Forename: </div>
				<div class="account_detail"><xsl:value-of select="/page/user/forename" /></div>
			</div>
				<div class="account_title">Surname: </div>
				<div class="account_detail"><xsl:value-of select="/page/user/surname" /></div>
			<div>
				<div class="account_title">E-Mail: </div>
				<div class="account_detail"><xsl:value-of select="/page/user/email" /></div>
			</div>
			
			<div id="account_change_password_link">
			<xsl:element name="a"><xsl:attribute name="class">link</xsl:attribute><xsl:attribute name="href">
			<xsl:value-of select="/page/settings/document_root" />/changepassword/<xsl:value-of select="page/@id" /></xsl:attribute>Change Password</xsl:element>
			</div>
		</div>
	</xsl:template>