
	<xsl:template name="search">
		<xsl:if test="page/settings/search = '1'">
			<form action="" onsubmit="javascript:searchFunction(); return false;" id="searchform">
				<div id="search">
					<input type="text" id="searchtext" name="searchtext" />
					<input type="button" id="searchbutton" name="searchbutton" value="Find" onclick="javascript:searchFunction();" />
				</div>
			</form>
		</xsl:if>
	</xsl:template>
	
	<xsl:template name="sitelinks">
		<div id="links">
		Site Links
		</div>
	</xsl:template>
	
	<xsl:template name="adverts">
		<xsl:if test="page/settings/google_ads = 1">
			<div id="adverts">
				<br />
				
				<xsl:element name="object">
					<xsl:attribute name="classid"><xsl:value-of select="/page/settings/document_root" />/ad</xsl:attribute>
					<xsl:attribute name="data"><xsl:value-of select="/page/settings/document_root" />/ad</xsl:attribute>
					<xsl:attribute name="type">text/html</xsl:attribute>
					<xsl:attribute name="id">google_ads</xsl:attribute>
					<!-- <xsl:attribute name="width"><xsl:value-of select="/page/settings/google_ad_width" /></xsl:attribute>
					<xsl:attribute name="height"><xsl:value-of select="/page/settings/google_ad_height" /></xsl:attribute> -->
				</xsl:element>
			</div>
		</xsl:if>
	</xsl:template>