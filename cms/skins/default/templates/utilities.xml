
	<xsl:template name="search">
		<xsl:if test="page/settings/search = '1'">
			<xsl:element name="form">
				<xsl:attribute name="action"><xsl:value-of select="/page/settings/document_root" />/search</xsl:attribute>
				<xsl:attribute name="method">GET</xsl:attribute>
				<xsl:attribute name="id">searchform</xsl:attribute>
				<div id="search">
					<input type="text" id="searchtext" name="searchtext" onkeyup="delayedSearch();"/>
					<!-- <input type="button" id="searchbutton" name="searchbutton" value="Find" onclick="javascript:searchFunction();" /> -->
					<input type="submit" id="searchbutton" name="searchbutton" value="Find" />
				</div>
			</xsl:element>
			<div id="ajaxSearchResults">
			</div>
		</xsl:if>
	</xsl:template>
	
	<xsl:template name="sitelinks">
		<div id="links">
		Site Links
		</div>
	</xsl:template>
	
	<xsl:template name="adverts">
		<xsl:if test="page/settings/google_ads = 1">
			<div id="adverts">
				<br />
				<script type="text/javascript"><xsl:comment>
				google_ad_client = "<xsl:value-of select="/page/settings/google_ad_client" />";
				google_ad_slot = "<xsl:value-of select="/page/settings/google_ad_slot" />";
				google_ad_width = <xsl:value-of select="/page/settings/google_ad_width" />;
				google_ad_height = <xsl:value-of select="/page/settings/google_ad_height" />;
				</xsl:comment>
				</script>
				<script type="text/javascript"
				src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
				</script>
			</div>
		</xsl:if>
	</xsl:template>