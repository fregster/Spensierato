<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
	<xsl:template name="search">
		<xsl:if test="/page/settings/search = '1'">
			<form action="{/page/settings/document_root}/search" method="GET" id="searchform">
				<div id="search">
					<input type="text" id="searchtext" name="searchtext" onkeyup="delayedSearch();" />
					<!-- <input type="button" id="searchbutton" name="searchbutton" value="Find" onclick="javascript:searchFunction();" /> -->
					<input type="submit" id="searchbutton" name="searchbutton" value="Find" />
				</div>
			</form>
			<div id="ajaxSearchResults" style="visibility: hidden;">
			</div>
		</xsl:if>
	</xsl:template>
	
	<xsl:template name="ShoppingCart">
		<xsl:if test="/page/settings/shop = '1' and /page/cart">
			<div id="ShoppingCart">
			<div id="ShoppingCartTitle">Your Shopping Basket</div>
				<xsl:choose>
					<xsl:when test="/page/cart/items/item">
						<xsl:for-each select="/page/cart/items/item">
							<xsl:value-of select="quantity" /> x <xsl:value-of select="name" /> £<xsl:value-of select="price" /> each<br/>
						</xsl:for-each>
						<div><xsl:value-of select="count(/page/cart/items/item)"/> Items Totaling £<xsl:value-of select="/page/cart/cost/total" /></div>
						<div>
							<xsl:element name="a">
								<xsl:attribute name="href"><xsl:value-of select="/page/settings/document_root" />/cart</xsl:attribute>
								View Cart
							</xsl:element> | 
							<xsl:element name="a">
								<xsl:attribute name="href"><xsl:value-of select="/page/settings/document_root" />/cart/checkout</xsl:attribute>
								Checkout
							</xsl:element>
						</div>
					</xsl:when>
					<xsl:otherwise>
						There are no items in your cart
					</xsl:otherwise>
				</xsl:choose>
			</div>
		</xsl:if>
	</xsl:template>
	
	<xsl:template name="sitelinks">
		<div id="links">
		Site Links
		</div>
	</xsl:template>
	
	<xsl:template name="adverts">
		<xsl:if test="/page/settings/google_ads = 1">
			<div id="adverts">
				<br />
				<script type="text/javascript"><xsl:comment>
				google_ad_client = "<xsl:value-of select="/page/settings/google_ad_client" />";
				google_ad_slot = "<xsl:value-of select="/page/settings/google_ad_slot" />";
				google_ad_width = <xsl:value-of select="/page/settings/google_ad_width" />;
				google_ad_height = <xsl:value-of select="/page/settings/google_ad_height" />;
				</xsl:comment>
				</script>
				<script type="text/javascript"
				src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
				</script>
			</div>
		</xsl:if>
	</xsl:template>
</xsl:stylesheet>