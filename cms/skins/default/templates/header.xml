
	<xsl:template name="header">
			<head>
				<xsl:element name="title"><xsl:value-of select="/page/settings/site_name_short" /> | <xsl:value-of select="/page/@title" /></xsl:element>
				
				<xsl:element name="meta">
					<xsl:attribute name="name">keywords</xsl:attribute>
					<xsl:attribute name="content"><xsl:value-of select="/page/settings/meta_keywords" /></xsl:attribute>
				</xsl:element>
				
				<xsl:element name="meta">
					<xsl:attribute name="name">description</xsl:attribute>
					<xsl:attribute name="content"><xsl:value-of select="/page/settings/meta_description" /></xsl:attribute>
				</xsl:element>
				
				<xsl:if test="/page/settings/meta_verify-v1 != ''">
				<xsl:element name="meta">
					<xsl:attribute name="name">verify-v1</xsl:attribute>
					<xsl:attribute name="content"><xsl:value-of select="/page/settings/meta_verify-v1" /></xsl:attribute>
				</xsl:element>
				</xsl:if>
				
				<xsl:call-template name="stylesheet"/>
	
				<xsl:call-template name="javascript"/>
				
				<xsl:for-each select="/page/settings/header_extra/setting">
					 <xsl:element name="{tag}">
					
						<xsl:for-each select="attributes/*">
						<xsl:attribute name="{name()}"><xsl:value-of select="." /></xsl:attribute>
					</xsl:for-each>
					<xsl:if test="tag = 'script'"> //js</xsl:if>
					
					<xsl:value-of select="value" />
				</xsl:element>
				
				</xsl:for-each>
			</head>
	</xsl:template>