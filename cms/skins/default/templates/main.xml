
<xsl:template match="/">
        <html>
			<xsl:call-template name="header"/>
				
			<xsl:element name="body">
			<xsl:attribute name="onload">initNotification(); alert(readCookie('fontSize'));<!-- <xsl:if test="/page/options/fontSize">stepFontSize(<xsl:value-of select="/page/options/fontSize -3" />);</xsl:if> --> 
				<xsl:if test="/page/warnings/warning">
					 notification('The site has configuration problems');
				</xsl:if>
				  return false;
			</xsl:attribute>
			<div id="jump_to_contents"><a href="#contents">Jump To Contents</a></div>
			<div id="notifications" style="visibility: hidden;">Notifications</div>
			<div id="site_frame">
				<div id="page_main">
					<xsl:call-template name="banner"/>
					<div id="page_section_middle">
						<div id="page_section_left_col">
							<xsl:call-template name="menu"/>
							<div id="page_section_left_utilities">
								<xsl:call-template name="sitelinks"/>
								<xsl:call-template name="search"/>
								<xsl:call-template name="adverts"/>
							</div>
						</div>
						<div id="page_section_main">
						<a name="contents" />
							<xsl:call-template name="body"/>
							<!-- <form action="" id="mcetest"><div><textarea cols="20" rows="10">Test</textarea></div></form>  -->
						</div>
					</div>
				</div>
				***FOOTER_TEXT***
			</div>
			</xsl:element>
        </html>
</xsl:template>