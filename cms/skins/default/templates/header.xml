
	<xsl:template name="header">
			<head>
				<xsl:element name="title"><xsl:value-of select="/page/settings/site_name_short" /> | <xsl:value-of select="/page/@title" /></xsl:element>
				
				<xsl:element name="meta">
					<xsl:attribute name="name">keywords</xsl:attribute>
					<xsl:attribute name="content"><xsl:value-of select="/page/settings/meta_keywords" /></xsl:attribute>
				</xsl:element>
				
				<xsl:element name="meta">
					<xsl:attribute name="name">description</xsl:attribute>
					<xsl:attribute name="content"><xsl:value-of select="/page/settings/meta_description" /></xsl:attribute>
				</xsl:element>
				
				<xsl:if test="/page/settings/meta_verify-v1 != ''">
				<xsl:element name="meta">
					<xsl:attribute name="name">verify-v1</xsl:attribute>
					<xsl:attribute name="content"><xsl:value-of select="/page/settings/meta_verify-v1" /></xsl:attribute>
				</xsl:element>
				</xsl:if>
				
				<xsl:element name="link">
					<xsl:attribute name="href"><xsl:value-of select="/page/settings/document_root" />/css</xsl:attribute>
					<xsl:attribute name="type">text/css</xsl:attribute>
					<xsl:attribute name="rel">stylesheet</xsl:attribute>
				</xsl:element>
				
				<xsl:if test="/page/options/css_mobile = 1">
				<xsl:element name="link">
					<xsl:attribute name="href"><xsl:value-of select="/page/settings/document_root" />/css/mobile</xsl:attribute>
					<xsl:attribute name="type">text/css</xsl:attribute>
					<xsl:attribute name="media">handheld</xsl:attribute>
					<xsl:attribute name="rel">stylesheet</xsl:attribute>
				</xsl:element>
				</xsl:if>
				
				<xsl:if test="/page/options/admin_mode = 1">
				<xsl:element name="link">
					<xsl:attribute name="href"><xsl:value-of select="/page/settings/document_root" />/css/submodal</xsl:attribute>
					<xsl:attribute name="type">text/css</xsl:attribute>
					<xsl:attribute name="rel">stylesheet</xsl:attribute>
				</xsl:element>
				</xsl:if>
				<script type="text/javascript">
					var document_root = '<xsl:value-of select="/page/settings/document_root" />';
					var current_page = '<xsl:value-of select="/page/@id" />';
					
					<xsl:if test="count(/page/settings/pre_load_images/setting) > 0">
					// set pre-loading image list
				     images = new Array();
				     <xsl:for-each select="/page/settings/pre_load_images/setting">images[0]="<xsl:value-of select="/page/settings/document_root" />/skin/pre-load-images/<xsl:value-of select="."/>"
				     </xsl:for-each>
					</xsl:if>
					function returnRefresh(returnVal) 
					{
						window.top.document.body.innerHTML = '';
					    window.top.location = document_root+'/'+current_page;
					}

				</script>
				<xsl:call-template name="javascript"/>
			</head>
	</xsl:template>